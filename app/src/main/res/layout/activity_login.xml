<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFree"
    android:padding="@dimen/far"
    tools:context=".activity.login.LoginActivity">

    <ImageView
        android:layout_width="315dp"
        android:layout_height="240dp"
        android:layout_above="@id/etLoginUsername"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="23dp"
        android:src="@drawable/logo1" />

    <EditText
        android:id="@+id/etLoginUsername"
        android:layout_width="197dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/background_light"
        android:hint="username" />

    <EditText
        android:id="@+id/etLoginPassword"
        android:layout_width="203dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/etLoginUsername"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:layout_marginBottom="@dimen/high"
        android:background="@drawable/background_light"
        android:hint="password"
        android:inputType="textPassword" />


    <Button
        android:id="@+id/btLogin"
        android:layout_width="140dp"
        android:layout_height="43dp"
        android:layout_below="@id/etLoginPassword"
        android:layout_alignEnd="@id/etLoginPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="34dp"
        android:background="@drawable/background_dark"
        android:text="Masuk"
        android:textColor="@color/colorSmooth" />

    <TextView
        android:id="@+id/goRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etLoginPassword"

        android:hint="Daftar sekarang"
        android:padding="@dimen/normal" />


</RelativeLayout>